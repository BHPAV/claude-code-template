{
  "mcpServers": {
    "neo4j": {
      "transport": "stdio",
      "command": "uvx",
      "args": ["mcp-neo4j-cypher@0.5.1", "--transport", "stdio"],
      "env": {
        "NEO4J_URI": "${NEO4J_URI}",
        "NEO4J_USERNAME": "${NEO4J_USER}",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD}",
        "NEO4J_DATABASE": "${NEO4J_DATABASE}"
      }
    }
  }
}
